<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".views.UpdateGameResultFragment">
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/compitation_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/games_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:id="@+id/home_team_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/white"
                android:fontFamily="@font/bukra"
                android:gravity="right"
                android:hint="@string/home_team_result"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="13sp" />


            <EditText
                android:layout_weight="1"
                android:id="@+id/away_team_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:fontFamily="@font/bukra"
                android:gravity="right"
                android:hint="@string/away_team_result"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>




        <Button
            android:id="@+id/update_result_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/login_bg"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bukra"
            android:padding="16dp"
            android:text="@string/update_result"
            android:textSize="13sp" />


